FROM ubuntu:latest

RUN echo 'Start of dockerfile'

ARG START_FILE
ARG EXTRA
ARG SERVER_JAR
ARG APP_JAR

RUN apt-get update && apt-get install -y cpulimit bash openjdk-11-jre

### copy resources
COPY $START_FILE /
COPY $EXTRA .
COPY ${SERVER_JAR} ./server.jar
COPY ${APP_JAR} ./app.jar

ENTRYPOINT sh -c /$START_FILE